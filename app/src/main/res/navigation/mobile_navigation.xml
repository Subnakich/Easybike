<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_welcome">

    <fragment
        android:id="@+id/navigation_welcome"
        android:name="ru.subnak.easybike.presentation.ui.welcome.WelcomeFragment"
        android:label="@string/title_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_navigation_welcome_to_navigation_map"
            app:destination="@id/navigation_map"
            app:popUpTo="@id/navigation_map" />
        <action
            android:id="@+id/action_navigation_welcome_to_navigation_background_permission"
            app:destination="@id/navigation_background_permission"
            app:popUpTo="@id/navigation_background_permission"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_background_permission"
        android:name="ru.subnak.easybike.presentation.ui.backloaction.BackLocationFragment"
        android:label="@string/title_back_permission"
        tools:layout="@layout/fragment_back_location"
        >
        <action
            android:id="@+id/action_navigation_background_permission_to_navigation_map"
            app:destination="@id/navigation_map"
            app:popUpTo="@id/navigation_map"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_map"
        android:name="ru.subnak.easybike.presentation.ui.map.MapsFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="ru.subnak.easybike.presentation.ui.statistic.StatisticFragment"
        android:label="@string/title_statistic"
        tools:layout="@layout/fragment_statistic" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="ru.subnak.easybike.presentation.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history">
        <argument
            android:name="journey"
            app:argType="ru.subnak.easybike.domain.model.Journey" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="ru.subnak.easybike.presentation.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>